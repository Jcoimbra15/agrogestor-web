generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MovTipo {
  ENTRADA
  SAIDA
}

enum OSStatus {
  ABERTA
  EM_ANDAMENTO
  FINALIZADA
}

model EstoqueItem {
  id        String   @id @default(cuid())
  nome      String
  saldo     Int      @default(0)
  minimo    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  movs EstoqueMov[]
}

model EstoqueMov {
  id         String     @id @default(cuid())
  tipo       MovTipo
  quantidade Int
  obs        String?
  createdAt  DateTime   @default(now())

  itemId String
  item   EstoqueItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model Animal {
  id         String   @id @default(cuid())
  brinco     String
  sexo       String   @default("NÃ£o informado")
  categoria  String   @default("Outro")
  lotePasto  String?
  nascimento String?
  createdAt  DateTime @default(now())

  pesagens Pesagem[]
}

model Pesagem {
  id        String   @id @default(cuid())
  pesoKg    Int
  data      String
  obs       String?
  createdAt DateTime @default(now())

  animalId String
  animal   Animal @relation(fields: [animalId], references: [id], onDelete: Cascade)
}

model OS {
  id           String    @id @default(cuid())
  titulo       String
  responsavel  String
  status       OSStatus  @default(ABERTA)
  iniciadoEm   DateTime?
  finalizadoEm DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

/* =======================
   AUTH (LOGIN)
   ======================= */

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  nome         String
  passwordHash String
  isAdmin      Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sessions Session[]
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
}
